<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bowensun.film.repository.mybatis.PermissionDao">

    <resultMap id="BaseResultMap" type="com.bowensun.film.domain.SysPermission">
        <id column="id" property="id"/>
        <result column="available" property="available"/>
        <result column="name" property="name"/>
        <result column="parentId" property="parentId"/>
        <result column="parentIds" property="parentIds"/>
        <result column="permission" property="permission"/>
        <result column="resourceType" property="resourceType"/>
        <result column="url" property="url"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, available, `name`, parentId, parentIds, permission, resourceType,url
    </sql>

    <!--查询列表-->
    <select id="selectByUserName" resultMap="BaseResultMap">
        select
        t1.*
        from
        sys_permission t1
        left join sys_role_permission t2 on (t1.id = t2.permission_id)
        left join sys_role t3 on (t2.role_id = t3.id)
        left join sys_user_role t4 on (t3.id = t4.role_id)
        left join user_info t5 on (t4.uid = t5.uid)
        where
        t5.username = #{username}
    </select>
</mapper>